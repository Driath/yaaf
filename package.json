{
  "name": "yaaf",
  "version": "2.0.0",
  "description": "Yet Another Agent Framework - Agent skills for Claude Code",
  "scripts": {
    "start": "./apps/dispatchator/shell/tmux-start.sh",
    "start:orchestrator": "bun apps/dispatchator/index.tsx",
    "dev:orchestrator": "bun --watch apps/dispatchator/index.tsx",
    "debug:orchestrator": "INK_DEBUG=ia/render.log bun --watch apps/dispatchator/index.tsx",
    "start:agents": "tmux attach -t yaaf-agents",
    "cleanup": "./scripts/cleanup.sh",
    "dispatchator:typecheck": "tsc",
    "prepare": "husky"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "figures": "^6.1.0",
    "ink": "^6.6.0",
    "jira.js": "^5.3.0",
    "react": "^19.2.4",
    "rxjs": "^7.8.2",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "bun-types": "^1.3.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "apps/dispatchator/**/*.{ts,tsx}": [
      "biome check --fix",
      "bash -c 'tsc --noEmit'"
    ]
  }
}