{
  "permissions": {
    "allow": [
      "Bash(touch ia/state/agents/*)",
      "Bash(.claude/skills/**/scripts/*)",
      "mcp__plugin_atlassian_atlassian__atlassianUserInfo",
      "mcp__plugin_atlassian_atlassian__getAccessibleAtlassianResources",
      "mcp__plugin_atlassian_atlassian__getJiraIssue",
      "mcp__plugin_atlassian_atlassian__searchJiraIssuesUsingJql",
      "mcp__plugin_atlassian_atlassian__createJiraIssue",
      "mcp__plugin_atlassian_atlassian__editJiraIssue",
      "mcp__plugin_atlassian_atlassian__getTransitionsForJiraIssue",
      "mcp__plugin_atlassian_atlassian__transitionJiraIssue",
      "mcp__plugin_atlassian_atlassian__addCommentToJiraIssue",
      "mcp__plugin_atlassian_atlassian__getVisibleJiraProjects",
      "mcp__plugin_atlassian_atlassian__getJiraProjectIssueTypesMetadata"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-user-prompt-submit.sh"
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-notification.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-stop.sh"
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-notification.sh"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-permission-request.sh"
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-notification.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-notification.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-pre-tool-use.sh"
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-notification.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-notification.sh"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-notification.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-notification.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-notification.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-session-end.sh"
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/apps/dispatchator/shell/on-notification.sh"
          }
        ]
      }
    ]
  }
}
